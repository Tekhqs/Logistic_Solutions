
@{
    ViewBag.Title = "SignIn";
}
<style>
    body {
        background-image: url('../../Images/SignIn/bg.jpg');
        background-repeat: no-repeat;
        background-size: cover
    }

    .SignInSection {
        height: 80vh;
        padding-top: 10%
    }

        .SignInSection .row {
            height: 100%
        }

    .VerticalyCenter {
        display: flex;
        align-items: center
    }

    .HorizontalyCenter {
        display: block;
        margin: 0 auto;
        float: none
    }

    .ImgSection {
        background-image: url('../../Images/SignIn/SignIn.png');
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%
    }

        .ImgSection img {
            width: 100%;
        }

    .InputSection {
        height: 100%;
        background-color: #f4f7fc
    }

    .Heading {
        color: #C40035;
        font-size: 24px;
    }

    .SignInSection input {
        color: #A6AEBC;
        font-size: 14px;
        margin-top: 15px;
        border: 1px solid #DEE1E6;
    }

    .RightAlign {
        text-align: right
    }

        .RightAlign p {
            padding-top: 15px;
            color: #C40035
        }

    .backAction {
        padding: 12px 30px;
        font-size: 14px;
        border: 1px solid #A7A9AC;
        border-radius: 25px;
        text-decoration: none !important;
        color: #A7A9AC !important;
        margin-right: 7px;
    }

    .SignInAction {
        padding: 12px 30px;
        font-size: 14px;
        border: 1px solid #C40035;
        border-radius: 25px;
        text-decoration: none !important;
        color: white !important;
        background-color: #C40035;
        margin-left: 7px
    }

    .Actions {
        padding-top: 15px;
    }

    .Contain {
        height: 100%;
        border-radius: 5px;
        padding: 0;
    }

    .Main-heading {
        font-size: 30px;
        color: white
    }

    .text {
        font-size: 16px;
        color: white
    }
    @@media only screen and (max-width: 600px){
        .backAction{
            padding:12px 15px;

        }
        .SignInAction{
            padding:12px 15px;
        }
    }
</style>
<section class="SignInSection">
    <div class="row ">
        <div class="col-md-9 Contain HorizontalyCenter">

            <div class="col-md-5 col-sm-5 col-xs-5 VerticalyCenter  ImgSection">
                <div class="col-md-12">
                    <p class="text">
                        Welcome to
                    </p>
                    <p class="Main-heading">
                        Logistics <span style="font-weight:bold">Solutions</span>
                    </p>

                </div>

            </div>
            <div class="col-md-7  InputSection VerticalyCenter">
                <div class="col-md-9 HorizontalyCenter" style="padding-left:0; padding-right:0">
                    <p class="Heading">
                        Sign In
                    </p>
                    <input type="text" placeholder="UserId/ Name *" class="form-control" />
                    <input type="text" placeholder="Password *" class="form-control" />
                    <div class="RightAlign">
                        <p>
                            Forget Password?
                        </p>
                    </div>
                    <div class=" Actions ">
                        <a href="#" class="backAction ">
                            Back
                        </a>

                        <a href="#" class="SignInAction ">
                            Sign In
                        </a>
                    </div>


                </div>


            </div>
        </div>

    </div>
</section>

