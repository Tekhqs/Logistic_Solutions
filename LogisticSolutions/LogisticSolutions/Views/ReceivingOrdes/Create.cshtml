

@{
    Layout = "~/Views/Shared/_LayoutLS.cshtml";
}



<div class="row">
    <div class="FormBody col-md-12">
        <div class="col-md-12 bread">
            <ul class="breadcrumb">
                <li>
                    <i class="fas fa-angle-left"></i>
                </li>

                <li>Dashboard<span class="slash">/</span></li>
                <li>Receving Orders<span class="slash">/</span></li>
                <li>Create Receiving Orders</li>
            </ul>
        </div>

        <div class="col-xs-12 PageTabs pl-5">
            <button class="Button">General</button>
            <button class="Button">Acounts</button>
            <button class="Button">Shippers</button>
            <button class="Button">Zendesk</button>
            <button class="Button">RF</button>
            <button class="Button">Edit History</button>
        </div>

        <form id="FormReceiveOrder">


            <div class="col-xs-12 CreateUserSection pl-5">
                <h4 class="text-left">Create Receiving</h4>
                <div class="row CreateUserform">
                    <div class="col-sm-6 col-xs-12 form-group">

                        <div class="SingleInput">
                            <label for="status">Status</label>
                            <select id="ROStatus" class="form-control" >
                                <option> Open </option>
                                <option> Inprocess </option>
                                <option> Hold </option>
                                <option> Completed </option>
                                <option> Void </option>
                            </select>
                        </div>

                        <div class="SingleInput">
                            <label for="ROrderNumber">Order Number</label>
                 @(Html.Kendo().TextBox().Name("ROrderNumber").HtmlAttributes(new { @class = "form-control", @placeholder = "Enter Order Number", @style = "width:100%", @type = "text" }))

                        </div>
                        <div class="SingleInput">
                            <label for="RPONumber">PO Number</label>
                @(Html.Kendo().TextBox().Name("RPONumber").HtmlAttributes(new { @class = "form-control", @placeholder = "Enter PO Number", @style = "width:100%", @type = "number" }))

                        </div>



                        <div class="SingleInput">
                            <label for="ROEquipment">Equipment</label>
                            @(Html.Kendo().TextBox().Name("ROEquipment").HtmlAttributes(new { @class = "form-control", @placeholder = "Enter  Equipment", @style = "width:100%", @type = "text" }))

                        </div>
                        <div class="SingleInput">
                            <label for="ROSeal">Seal(s)</label>
                            @(Html.Kendo().TextBox().Name("ROSeal").HtmlAttributes(new { @class = "form-control", @placeholder = "Enter  Seal(s)", @style = "width:100%", @type = "text" }))

                        </div>


                    </div>
                    <div class="col-sm-6 col-xs-12 form-group">


                        <div class="SingleInput">
                            <label for="ROStatus">Qty Planned</label>
                            <select id="ROStatus" class="form-control">
                                <option> 0-0EA </option>
                                <option> 0 CS </option>
                                <option> 0 IP </option>

                            </select>
                        </div>
                        <div class="SingleInput">
                            <label for="ROQty">Qty Shipped</label>
                            <select id="ROQty" class="form-control">
                                <option> 0-0EA </option>
                                <option> 0 CS </option>
                                <option> 0 IP </option>

                            </select>
                        </div>
                        <div class="SingleInput">
                            <label>LPNs: &nbsp; 0</label>
                        </div>
                        <div class="SingleInput">
                            <label>Total Shipped Weight: &nbsp; 0.00LBS</label>
                        </div>



                    </div>

                </div>



            </div>



            <div class="col-xs-12 CreateUserSection pl-5">
                <h4 class="text-left">Partners</h4>
                <div class="row CreateUserform">
                    <div class="col-sm-6 col-xs-12 form-group">
                        <div class="SingleInput">
                            <label for="ROAccount">Account <span>*</span></label>
                            @(Html.Kendo().DropDownList()
                                                                    .Name("ROAccount")
                                                                    .DataTextField("Status")
                                                                    .DataValueField("OrderId")
                                                                    .HtmlAttributes(new { style = "width:100%" })
                                                                    .Filter("contains")
                                                                    .OptionLabel("Select")
                                                                    .DataSource(source =>
                                                                    {
                                                                        source.Read(read =>
                                                                        {
                                                                            read.Action("UserData", "Home");
                                                                        })
                                                                                   .ServerFiltering(true);
                                                                    })
                                                                    .HtmlAttributes(new { @required = "required", @validationMessage = "Account is required" })
                            )

                        </div>
                        <div class="SingleInput">
                            <label for="ROSupplier">Supplier</label>
                            @(Html.Kendo().DropDownList()
                                                            .Name("ROSupplier")
                                                             .DataTextField("Status")
                                                              .DataValueField("OrderId")
                                                             .HtmlAttributes(new { style = "width:100%" })
                                                             .Filter("contains")
                                                              .OptionLabel("Select")
                                                              .DataSource(source =>
                                                                {
                                                                    source.Read(read =>
                                                                              {
                                                                                  read.Action("UserData", "Home");
                                                                              })
                                                                          .ServerFiltering(true);
                                                                })

                            )
                        </div>






                    </div>
                    <div class="col-sm-6 col-xs-12 form-group">


                        <div class="SingleInput">
                            <label for="ROCarrier">Carrier</label>
                            @(Html.Kendo().DropDownList()
                                                                                                                  .Name("ROCarrier")
                                                                                                                  .DataTextField("Status")
                                                                                                                  .DataValueField("OrderId")
                                                                                                                  .HtmlAttributes(new { style = "width:100%" })
                                                                                                                  .Filter("contains")
                                                                                                                  .OptionLabel("Select")
                                                                                                                  .DataSource(source =>
                                                                                                                  {
                                                                                                                      source.Read(read =>
                                                                                                                      {
                                                                                                                          read.Action("UserData", "Home");
                                                                                                                      })
                                                                                                                      .ServerFiltering(true);
                                                                                                                  })
                                                                                                                   .HeaderTemplate("<div onclick=\"ClickForModalCareer()\" style=\"cursor:pointer\" class=\"dropdown-header k-widget k-header \">" +
                                                                                       " <a  style=\"font-size:16px; text-decoration:none;\" class=\"linkColor\" > <i  style=\"margin-right:15px\" class=\"fas fa-plus\"></i> Add New</a>" +
                                                                                       "</div>")
                            )
                        </div>
                        <div class="SingleInput">
                            <label for="RORFrom">Received Form</label>
                            @(Html.Kendo().DropDownList()
                                                                                                                                              .Name("RORFrom")
                                                                                                                                              .DataTextField("Status")
                                                                                                                                              .DataValueField("OrderId")
                                                                                                                                              .HtmlAttributes(new { style = "width:100%" })
                                                                                                                                              .Filter("contains")
                                                                                                                                              .OptionLabel("Select")
                                                                                                                                              .DataSource(source =>
                                                                                                                                              {
                                                                                                                                                  source.Read(read =>
                                                                                                                                                  {
                                                                                                                                                      read.Action("UserData", "Home");
                                                                                                                                                  })
                                                                                                                                                  .ServerFiltering(true);
                                                                                                                                              })

                            )
                        </div>

                    </div>

                </div>



            </div>





            <div class="col-xs-12 CreateUserSection pl-5">
                <h4 class="text-left">Dates</h4>
                <div class="row CreateUserform">
                    <div class="col-sm-6 col-xs-12 form-group">
                        <div class="SingleInput">
                            <label for="ROEArrivalDate ">Expected Arrival Date</label>
                            @(Html.Kendo().TextBox().Name("ROEArrivalDate").HtmlAttributes(new { @class = "form-control datepicker", @placeholder = "Enter Expected Arrival Date", @style = "width:100%", @type = "date" }))

                        </div>

                    </div>
                    <div class="col-sm-6 col-xs-12 form-group">
                        <div class="SingleInput">
                            <label for="ROAarrivalDate">Actual Arrival Date</label>
                            @(Html.Kendo().TextBox().Name("ROAarrivalDate").HtmlAttributes(new { @class = "form-control datepicker", @placeholder = "Enter Actual Arrival Date", @style = "width:100%", @type = "date" }))


                        </div>

                    </div>


                </div>



            </div>

            <div class="col-xs-12 CreateUserSection pl-5">
                <h4 class="text-left">Other Instuctions</h4>
                <div class="row CreateUserform">
                    <div class="col-sm-12 col-xs-12 form-group">
                        <div class="SingleInput">
                            @Html.TextArea("ROInstructions", "", new { @class = "form-control ", @placeholder = "Add Instuctions", style = "width: 100%;" })
                        </div>

                    </div>


                </div>



            </div>



            <div class="col-xs-12 CreateUserSection pl-5">


                <div class="row">
                    <div class="col-xs-12">
                        <button class="Button">Cancel</button>
                        <button id="CreateUser" onclick="CreateROrder()" class="Button">Create</button>
                    </div>
                </div>

            </div>
        </form>

    </div>

</div>

<div class="modal fade" id="CreatCareerModal" tabindex="-1" role="dialog" aria-labelledby="CreatUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CreatUserModalLabel"> Create Carrier</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-xs-12 CreateUserSection pl-5">
                    <div class="row CreateUserform">
                        <div class="col-sm-6 col-xs-12 form-group">
                            <div class="CheckBoxSection">
                                <div class="SingleInput">
                                    <label for="IsEnabled">Enabled </label>
                                    <input type="checkbox" id="IsEnabled" />
                                </div>

                                @*<div class="SingleInput">
                                        <label>User Role </label>
                                        @Html.DropDownList("RoleId", new SelectList(ViewBag.UserRole, "UserRoleID", "UserRoleName"), "-- Select --", new { @class = " form-control" })

                                    </div>*@
                            </div>
                            <div class="SingleInput">
                                <label for="CDescription">Description</label>
                                @(Html.Kendo().TextBox().Name("CDescription").HtmlAttributes(new { @class = "form-control", @placeholder = "Enter  Description", @required = "required", @validationMessage = "Description is required", @style = "width:100%" }))

                            </div>
                            <div class="SingleInput">
                                <label for="CAccountId">Account ID</label>
                                @(Html.Kendo().TextBox().Name("CAccountId").HtmlAttributes(new { @class = "form-control", @placeholder = "Enter  AccountId", @required = "required", @validationMessage = "AccountId is required", @style = "width:100%" }))

                            </div>
                            <div class="SingleInput">
                                <label for="CBillingId">Billing ID</label>
                                @(Html.Kendo().TextBox().Name("CBillingId").HtmlAttributes(new { @class = "form-control", @placeholder = "Billing Id", @style = "width:100%" }))

                            </div>
                            <div class="SingleInput">
                                <label for="name">
                                    Contact Name
                                </label>
                                <input type="email" class="form-control input-group" placeholder="Enter Email Here" id="Name" />

                            </div>
                            <div class="SingleInput">
                                <label for="Email">
                                    Contact Email
                                </label>
                                <input type="email" class="form-control input-group" placeholder="Enter Email Here" id="Email" />
                            </div>



                            <div class="SingleInput">
                                <label for="Phone">Contact Phone</label>
                                <input type="tel" class="form-control" placeholder="Optional" id="Phone" />
                            </div>









                        </div>
                        <div class="col-sm-6 col-xs-12 form-group">



                            <div class="SingleInput">
                                <label for="scac">SCAC</label>
                                <input type="text" class="form-control" placeholder="SCAC" />
                            </div>
                            <div class="SingleInput">
                                <label for="scac">MC #</label>
                                <input type="text" class="form-control" placeholder="MC #" />
                            </div>
                            <div class="SingleInput">
                                <label for="status">Type</label>
                                <select class="form-control">
                                    <option>
                                        UPS
                                    </option>
                                    <option>
                                        FEDEX
                                    </option>
                                    <option>
                                        USPS
                                    </option>
                                    <option>
                                        LTL
                                    </option>
                                </select>
                            </div>

                        </div>

                    </div>



                </div>



                <div class="col-xs-12 CreateUserSection pl-5">
                    <h4 class="text-left">Billing Adress</h4>
                    <div class="row CreateUserform">
                        <div class="col-sm-6 col-xs-12 form-group">
                            <div class="SingleInput">
                                <label for="Adres1">Adress 1</label>
                                <input type="text" class="form-control input-group" placeholder="Enter Adress Here" id="Adress1" />
                            </div>

                            <div class="SingleInput">
                                <label for="Adres2">Adress 2</label>
                                <input type="text" class="form-control" placeholder="Adress 2" id="Adress2" />
                            </div>

                            <div class="SingleInput">
                                <label for="Adres3">Adress 3</label>
                                <input type="text" class="form-control" placeholder="Adress 3" id="Adress3" />
                            </div>

                            <div class="SingleInput">
                                <label for="Adres4">Adress 4</label>
                                <input type="text" class="form-control" placeholder="Adress 4" id="Adress4" />
                            </div>




                        </div>
                        <div class="col-sm-6 col-xs-12 form-group">



                            <div class="SingleInput">
                                <label for="city">City</label>
                                <input type="text" class="form-control" placeholder="Enter Your City" id="City" />
                            </div>

                            <div class="SingleInput">
                                <label for="state">State</label>
                                <input type="text" class="form-control" placeholder="Enter Your State" id="State" />
                            </div>
                            <div class="SingleInput">
                                <label for="postalCode">Postal Code</label>
                                <input type="text" class="form-control" placeholder="Enter Your Postal Code" id="PostalCode" />
                            </div>
                            <div class="SingleInput">
                                <label for="country">Country</label>
                                <input type="text" class="form-control" placeholder="Enter Your Country" id="Country" />
                            </div>

                        </div>

                    </div>



                </div>



                <div class="col-xs-12 CreateUserSection pl-5">
                    <h4 class="text-left">Shipping  Adress</h4>
                    <div class="row CreateUserform">
                        <div class="col-sm-6 col-xs-12 form-group">
                            <div class="SingleInput">
                                <label for="usePrev">Use Billing Adresses </label>
                                <input onclick="setBillingValue()" type="checkbox" id="UsePrev" />
                            </div>
                            <div class="SingleInput">
                                <label for="ShippingAdres1">Adress 1</label>
                                <input type="text" class="form-control input-group" placeholder="Enter Adress Here" id="ShippingAdress1" />
                            </div>

                            <div class="SingleInput">
                                <label for="ShippingAdres2">Adress 2</label>
                                <input type="text" class="form-control" placeholder="Adress 2" id="ShippingAdress2" />
                            </div>

                            <div class="SingleInput">
                                <label for="ShippingAdres3">Adress 3</label>
                                <input type="text" class="form-control" placeholder="Adress 3" id="ShippingAdress3" />
                            </div>

                            <div class="SingleInput">
                                <label for="ShippingAdres4">Adress 4</label>
                                <input type="text" class="form-control" placeholder="Adress 4" id="ShippingAdress4" />
                            </div>




                        </div>
                        <div class="col-sm-6 col-xs-12 form-group">



                            <div class="SingleInput">
                                <label for="Shippingcity">City</label>
                                <input type="text" class="form-control" placeholder="Enter Your City" id="ShippingCity" />
                            </div>

                            <div class="SingleInput">
                                <label for="Shippingstate">State</label>
                                <input type="text" class="form-control" placeholder="Enter Your State" id="ShippingState" />
                            </div>
                            <div class="SingleInput">
                                <label for="ShippingpostalCode">Postal Code</label>
                                <input type="text" class="form-control" placeholder="Enter Your Postal Code" id="ShippingPostalCode" />
                            </div>
                            <div class="SingleInput">
                                <label for="Shippingcountry">Country</label>
                                <input type="text" class="form-control" placeholder="Enter Your Country" id="ShippingCountry" />
                            </div>

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <button class="Button">Cancel</button>
                            <button id="CreateUser" onclick="CreateUsers()" class="Button">Create</button>
                        </div>
                    </div>

                </div>


            </div>
            <div class="modal-footer">
                <button class="Button" data-dismiss="modal">Close</button>
                <button class="Button">Save changes</button>
                <button id="ClikeMeToOpenCareer" style="display:none" class="dropdown-item" data-toggle="modal" data-target="#CreatCareerModal">Change Password</button>



            </div>
        </div>
    </div>
</div>

