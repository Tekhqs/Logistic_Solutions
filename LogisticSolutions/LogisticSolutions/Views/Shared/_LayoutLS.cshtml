                    }


                }

                if (COldPassword != "" && CPassword != "" && CConfirmPassword != "" && confirmPasswordCheck == true && confirmPasswordCheck == true) {
                    
                    $.ajax({
                        url: "/Home/ChangePassword",
                        type: "POST",
                        dataType: "JSON",
                        data: { COldPassword, CPassword },
