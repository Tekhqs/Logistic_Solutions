                var CConfirmPassword = $("#CConfirmPassword").val();
                var confirmPasswordCheck = false;
                var passwordCheck = false;
                if (COldPassword == "") {
                    $("#COldPassword").css({ "border-color": "red" });
                }
                else {
                   
                        $("#COldPassword").css({ "border-color": "#ced4da" });
                }

