                        }
                        else if (item.plans == "Advanced")
                        {

                            <td><span class="parrot">@item.plans</span></td>

                        }
                        else
                        {
                            <td><span>@item.plans</span></td>

                        }*@

                    <td>@item.CreatedOn</td>
                    <td><span class="red">click here</span></td>
                    <td class="ActionsEdit"><a href="/User/Create/@item.UserID"> <i class="far fa-edit"></i></a> <i class="fas fa-trash-alt red"></i></td>
                </tr>
            }



        </tbody>
    </table>
</section>






