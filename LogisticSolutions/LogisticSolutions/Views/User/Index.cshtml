                    {
                        <td><i class="fas fa-dot-circle activeDOt parrot"></i>Active <p class="LastSeen">Since 3 hours</p></td>

                    }
                    else
                    {

                        <td><i class="fas fa-dot-circle activeDOt red"></i>Inactive <p class="LastSeen">Since 3 hours</p></td>

                    }
                    @*else
                        {
                            <td><i class="fas fa-dot-circle activeDOt GeryDark"></i>@item.Status <p class="LastSeen">Since @item.SinceActivetime hours</p></td>

                         }*@
                    @*@if (item.plans == "Basic")
